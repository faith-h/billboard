<h1><%= @board.name %></h1>

<div class="image">
<img src="https://robohash.org/<%= @artist.avatar %>?set=set5" />
</div>

<h4>Name: <%= @artist.name %></h4>
<h4>Genre: <%= @artist.genre %></h4>

<h2>Songs</h2>
<% @artist.songs.each do |song| %>
  <%= render 'songs/song', { song: song } %>
<% end %>
<br />
<br />
<%= link_to 'View Songs', artist_songs_path([@artist]), class: "ui button blue" %>
<%= link_to 'Edit Artist', edit_board_artist_path([@board, @artist]) %> |
<%= link_to 'Delete Artist', [@board, @artist], method: :delete %> |
<%= link_to 'Back To Artists', board_artists_path(@board) %>